{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Rust Example (simple)",
      "cargo": {
        "args": [
          "build",
          "--example=simple",
          "--package=streamlib-core"
        ],
        "filter": {
          "name": "simple",
          "kind": "example"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug Rust Tests",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--package=streamlib-core"
        ],
        "filter": {
          "name": "streamlib-core",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Example",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/examples/${input:exampleName}",
      "console": "integratedTerminal",
      "justMyCode": false,
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    },
    {
      "name": "Python: Pytest",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "libs/streamlib/tests",
        "-v"
      ],
      "console": "integratedTerminal",
      "justMyCode": true
    }
  ],
  "inputs": [
    {
      "id": "exampleName",
      "type": "promptString",
      "description": "Example filename (e.g., simple_camera_display.py)",
      "default": "simple_camera_display.py"
    }
  ]
}
