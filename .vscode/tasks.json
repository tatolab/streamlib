{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Rust: Build streamlib-core",
      "type": "shell",
      "command": "cargo",
      "args": ["build", "-p", "streamlib-core"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Rust: Test streamlib-core",
      "type": "shell",
      "command": "cargo",
      "args": ["test", "-p", "streamlib-core"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Rust: Run example (simple)",
      "type": "shell",
      "command": "cargo",
      "args": ["run", "--example", "simple"],
      "group": "none",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Rust: Clippy",
      "type": "shell",
      "command": "cargo",
      "args": ["clippy", "-p", "streamlib-core", "--", "-D", "warnings"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": ["$rustc"]
    },
    {
      "label": "Python: Run Tests",
      "type": "shell",
      "command": "uv",
      "args": ["run", "pytest", "libs/streamlib/tests/", "-v"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Python: Ruff Check",
      "type": "shell",
      "command": "uv",
      "args": ["run", "ruff", "check", "libs/streamlib/src/"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Nx: Build All",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run-many", "--target=build", "--all"],
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Nx: Test All",
      "type": "shell",
      "command": "npx",
      "args": ["nx", "run-many", "--target=test", "--all"],
      "group": "test",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
